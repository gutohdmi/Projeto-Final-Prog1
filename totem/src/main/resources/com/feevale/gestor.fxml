<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing ="10"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.feevale.ui.SecondaryController"
>
<padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
</padding>


    <Button text="Atualizar Lista" onAction="#atualizarLista"/>

    <ListView fx:id="listaAtendimentos"/>

    <Separator/>

    <GridPane hgap ="10" vgap="10">
        <Label text="ID Pedido:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="campoId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="comboStatus" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Button text="Atualizar Status"
                GridPane.columnIndex="1"
                GridPane.rowIndex="2"
                onAction="#atualizarStatus"/>
    </GridPane>

</VBox>
